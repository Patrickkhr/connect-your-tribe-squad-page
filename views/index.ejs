    <% persons.forEach(person => { %>
      <li><div class="overlay"></div><div class="gradient"></div>
        <img src="/persons/<%= person.name%>.png"> 

          <!-- <img src="<% if (person.name) { %>
          /persons/<%= person.name%>.png
          <% } else { %>
          /persons/<%= person.No-photo%>.png
          <% } %>" alt="student"> -->

        <h4><%= person.name %> <%= person.surname %></h4><button>meer info</button>
      <div class="member-info"><%= person.name %> <%= person.surname %> <%= person.bio %></div></li>
    <% }) %>
